---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Conoce a nuestro equipo de docentes altamente capacitados, listos para ayudarte a alcanzar tu máximo potencial.";

import {
  default as p1,
  default as p2,
  default as p3,
} from "../../assets/pics/profile-pic.png";

const team = [
  {
    pic: p1,
    name: "Dra. Laura Fernández",
    role: "Directora Académica",
    description:
      "Más de 10 años de experiencia en educación preuniversitaria. Especialista en estrategias de aprendizaje efectivas.",
    link: "#",
  },
  {
    pic: p2,
    name: "Ing. Carlos Ramírez",
    role: "Profesor de Matemáticas",
    description:
      "Experto en preparación para exámenes de admisión. Ha ayudado a cientos de estudiantes a mejorar su razonamiento lógico-matemático.",
    link: "#",
  },
  {
    pic: p3,
    name: "Lic. Ana Torres",
    role: "Profesora de Lenguaje",
    description:
      "Especialista en comprensión lectora y razonamiento verbal. Su metodología ha potenciado los resultados de sus alumnos en exámenes oficiales.",
    link: "#",
  },
];
---

<Section id="about">
  <div class="mt-[90px]">
    <SectionTitle sectionTitle="Equipo" description={description} />
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-10">
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
    <div class="flex justify-end mt-10">
      <button class="btn-primary">Ver todo el equipo</button>
    </div>
  </div>
</Section>
