---
import { Image } from "astro:assets";
import s1 from "../../assets/pics/uta.png";
import s2 from "../../assets/pics/espoch.png";
import s3 from "../../assets/pics/epn.jpg";
import s4 from "../../assets/pics/esforse.jpg";
import s5 from "../../assets/pics/central.png";
import s6 from "../../assets/pics/policia.png";
import Section from "./Section.astro";

const sponsors = [
  { logo: s1, alt: "Amazon logo" },
  { logo: s2, alt: "Dribble logo" },
  { logo: s3, alt: "HubSpot logo" },
  { logo: s4, alt: "Notion logo" },
  { logo: s5, alt: "Netflix logo" },
  { logo: s6, alt: "Policia" },
];
---

<Section id="sponsors">
  <div class="flex flex-wrap justify-between gap-7 mt-[60px]">
    {
      sponsors.map((sponsor) => {
        return (
          <div>
            <Image
              src={sponsor.logo}
              alt={sponsor.alt}
              loading="eager"
              class="w-32 h-32 object-contain"
            />
          </div>
        );
      })
    }
  </div>
</Section>
